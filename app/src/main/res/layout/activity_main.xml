<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.believer.streampusher.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/ly_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_push_url"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="输入推流地址 rtmp://" />

        <Button
            android:id="@+id/button_push"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_push_url"
            android:text="我要直播" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_live"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_play_url"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="输入观看直播地址 rtmp://" />

        <Button
            android:id="@+id/button_liveplayer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_play_url"
            android:text="观看直播" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_live"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">



    </RelativeLayout>


</RelativeLayout>
